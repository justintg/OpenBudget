<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:OpenBudget.Avalonia.Controls.BudgetEditor">
  <Design.PreviewWith>
    <Border Padding="20">
      <!-- Add Controls for Previewer Here -->
    </Border>
  </Design.PreviewWith>
  <Style Selector="local|MasterCategoryRow">
    <Setter Property="Template">
      <ControlTemplate>
        <DockPanel>
          <TextBlock DockPanel.Dock="Left" 
                     Width="{Binding Path=CategoryColumnWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:BudgetEditor}}}"
                     Background="Blue">Row</TextBlock>
          <TextBlock>Content</TextBlock>
        </DockPanel>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
