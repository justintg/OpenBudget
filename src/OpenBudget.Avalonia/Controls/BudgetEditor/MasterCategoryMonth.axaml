<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:OpenBudget.Avalonia.Controls.BudgetEditor"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OpenBudget.Avalonia.Controls.BudgetEditor.MasterCategoryMonth">
  <local:UniformStackPanel>
    <TextBlock Text="{Binding MasterCategoryMonthView.AmountBudgeted, Converter={StaticResource DecimalToStringConverter}}" Padding="5 0 0 0" FontWeight="Bold"/>
    <TextBlock Text="{Binding MasterCategoryMonthView.TransactionsInMonth, Converter={StaticResource DecimalToStringConverter}}" HorizontalAlignment="Right" Padding="0 0 5 0" FontWeight="Bold"/>
    <TextBlock Text="{Binding MasterCategoryMonthView.EndBalance, Converter={StaticResource DecimalToStringConverter}}" HorizontalAlignment="Right" Padding="0 0 5 0" FontWeight="Bold"/>
  </local:UniformStackPanel>
</UserControl>
