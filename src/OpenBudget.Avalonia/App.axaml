<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="using:OpenBudget.Avalonia.Converters"
             x:Class="OpenBudget.Avalonia.App">
  <Application.Styles>
    <FluentTheme Mode="Light"/>
    <StyleInclude Source="avares://OpenBudget/Controls/BudgetEditor/BudgetEditor.axaml" />
  </Application.Styles>
  <Application.Resources>
    <conv:DecimalToVisibilityConverter x:Key="PositiveDecimalVisibilityConverter" Zero="True" GreaterThanZero="True" LessThanZero="False" />
    <conv:DecimalToVisibilityConverter x:Key="NegativeDecimalVisibilityConverter" Zero="False" GreaterThanZero="False" LessThanZero="True" />
    <conv:BudgetEditorMonthMarginConverter x:Key="BudgetEditorMonthMarginConverter" />
    <conv:DecimalToStringConverter x:Key="DecimalToStringConverter" />
  </Application.Resources>
</Application>
